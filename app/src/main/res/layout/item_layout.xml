<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/item_layout">

    <ImageView
        android:id="@+id/imvProductThumb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/kiwi"
        android:layout_gravity="center"
        android:contentDescription="Image"/>

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiwi"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150.000VND"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txtProductCert1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="USDA"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/certification_background"/>

        <TextView
            android:id="@+id/txtProductCert2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="JAS"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@drawable/certification_background"/>

    </LinearLayout>

</LinearLayout>
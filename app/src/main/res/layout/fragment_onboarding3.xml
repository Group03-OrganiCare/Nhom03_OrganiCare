<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:layout_width="222dp"
        android:layout_height="222dp"
        android:src="@drawable/onboard03"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm an toàn"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#005959"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tất cả sản phẩm rau củ tại Organicare đều đảm bảo theo quy trình organic theo tiêu chuẩn Global GAP."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Bắt đầu"
        android:backgroundTint="#005959"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdjustQuantity"
    android:padding="15dp"
    android:weightSum="10"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/imvOrderThumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/apple_dazzle"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txtOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Táo Dazzle"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/txtOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000 VNĐ"
                android:textColor="#D13B55"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Trọng lượng"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>
        <Spinner
            android:id="@+id/spinnerWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Số lượng"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/imvMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/minus"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:layout_marginTop="22dp"
            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/imvPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/txtOrderNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú"
        android:background="@color/light_blue"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btnCloseOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:backgroundTint="#868686"/>
        <Button
            android:id="@+id/btnConfirmOrder"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt hàng"
            android:backgroundTint="@color/dark_green"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvProduct_delivery"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background">
        </ImageView>
        <LinearLayout
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameProduct_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Táo Dazzle"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/txtPriceEach_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000VND"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trọng lượng: "
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
                <TextView
                    android:id="@+id/txtWeight_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:text="Mua lại"
                android:gravity="center"
                android:layout_gravity="right"
                android:textSize="12sp">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá thành: "
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
                <TextView
                    android:id="@+id/txtPriceInvoice_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="750.000"
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" VND"
                    android:textSize="12sp"
                    android:textStyle="italic">
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
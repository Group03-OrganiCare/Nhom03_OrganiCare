<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/shadow">

        <ImageView
            android:id="@+id/imvSaleThumb"
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:src="@drawable/carrot"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtSaleProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cà rốt hữu cơ"
                android:textColor="#005959"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtSaleProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="115.000đ/kg"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="-20%"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtProductCert1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="USDA"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/certification_background"/>

            <TextView
                android:id="@+id/txtProductCert2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="JAS"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="2dp"
                android:gravity="center"
                android:background="@drawable/certification_background"/>

    </LinearLayout>
</LinearLayout>
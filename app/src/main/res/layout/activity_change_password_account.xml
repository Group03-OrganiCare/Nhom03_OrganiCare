<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ChangePasswordAccount">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imbBackAcc2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_arrow_back"
                android:backgroundTint="@color/dark_green"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="CÀI ĐẶT TÀI KHOẢN"
                android:textSize="20sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background">

            <EditText
                android:id="@+id/edtPresentPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
                android:drawablePadding="10dp"
                android:hint="Mật khẩu hiện tại"
                android:inputType="textPassword"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textSize="18sp"
                android:longClickable="false"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background">

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
                android:drawablePadding="10dp"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textSize="18sp"
                android:longClickable="false"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background">
            <EditText
                android:id="@+id/edtTypePwAgain"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nhập lại mật khẩu"
                android:textSize="18sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                tools:ignore="RtlSymmetry"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChangePass"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:textSize="20sp"
        android:background="@drawable/border_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingFragment2"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:layout_width="222dp"
        android:layout_height="222dp"
        android:src="@drawable/onboard02"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao hàng nhanh chóng"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#005959"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân viên giao hàng nhanh chóng và thân thiện, giúp sản phẩm đến tay khách hàng luôn tươi ngon nhất."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

</LinearLayout>
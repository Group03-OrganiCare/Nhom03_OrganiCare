<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp">
        <ImageView
            android:id="@+id/imvNoticeThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/notibell"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/txtNoticeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo 1"
                android:textColor="#005959"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/txtNoticeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt hàng thành công!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/txtNoticeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/12/2021 03:00 PM"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabHostInvoice"
    android:orientation="vertical">
    <TabHost
        android:id="@+id/tabHostInvoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/TabWidgetTheme">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_green">
            </TabWidget>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/layoutItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imvProduct_delivery"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/apple_dazzle">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/txtNameProduct_delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng #101257"
                                android:textSize="18sp"
                                android:textStyle="bold">
                            </TextView>
                            <TextView
                                android:id="@+id/txtPriceEach_delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150.000VND"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20/12/2021"
                                    android:textSize="14sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="italic">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/layoutItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imvProduct_delivery2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/blackberry">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/txtNameProduct_delivery2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng #101003"
                                android:textSize="18sp"
                                android:textStyle="bold">
                            </TextView>
                            <TextView
                                android:id="@+id/txtPriceEach_delivery2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150.000VND"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <Button
                                android:id="@+id/btnOpenRateBtS"
                                android:layout_width="100sp"
                                android:layout_height="40sp"
                                android:text="Đánh giá"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="right">
                            </Button>
                            <Button
                                android:id="@+id/btnReOrder"
                                android:layout_width="100sp"
                                android:layout_height="40sp"
                                android:text="Mua lại"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="right">
                            </Button>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12/12/2021"
                                    android:textSize="12sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="italic">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:id="@+id/layoutItem3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/imvProduct_deliverycancel"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/cacao">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/txtNameProduct_deliverycancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đơn hàng #101123"
                                android:textSize="18sp"
                                android:textStyle="bold">
                            </TextView>
                            <TextView
                                android:id="@+id/txtPriceEach_deliverycancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="150.000VND"
                                android:textSize="16sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom">

                            <Button
                                android:id="@+id/BtnBuyAgain"
                                android:layout_width="100sp"
                                android:layout_height="40sp"
                                android:text="Mua lại"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:textSize="12sp">
                            </Button>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24/12/2021"
                                    android:textColor="@color/pink"
                                    android:textSize="12sp"
                                    android:textStyle="italic"
                                    android:gravity="end"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>
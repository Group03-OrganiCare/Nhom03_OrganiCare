<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imvProductThumbOrder"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/apple_rose"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:paddingStart="15dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtProductNameOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Táo Rose"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtProductPriceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.000VND"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txtProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x5"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtOrderCondition"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom|right"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:text="Đang giao"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/dark_green"/>


</LinearLayout>